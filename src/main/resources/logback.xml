<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <springProperty name = "token" source= "rollbar.access-token"/>
    <springProperty name = "environment" source= "rollbar.environment"/>
    <appender name="ROLLBAR" class="com.rollbar.logback.RollbarAppender">
        <accessToken>${token}</accessToken>
        <environment>${environment}</environment>
        <language>java</language>                                  
    </appender>

    <logger name="com.sbh.bpm" level="warn" additivity="false">
        <appender-ref ref="ROLLBAR" />
    </logger>
     <logger name="org.camunda.bpm" level="warn" additivity="false">
        <appender-ref ref="ROLLBAR" />
    </logger>


    <root level="warn">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLBAR" />
    </root>

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
</configuration>